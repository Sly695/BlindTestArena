generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  email       String   @unique
  password    String
  avatarUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  gamesHosted Game[]   @relation("UserHostedGames")
  players     Player[]
}

model Game {
  id         String         @id @default(uuid())
  code       String         @unique
  hostId     String
  visibility GameVisibility @default(PUBLIC)
  rounds     Int            @default(5)
  status     GameStatus     @default(WAITING)
  maxPlayers Int            @default(2)   
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  host       User           @relation("UserHostedGames", fields: [hostId], references: [id])
  players    Player[]
  roundsData Round[]
}

model Player {
  id       String   @id @default(uuid())
  userId   String
  gameId   String
  score    Int      @default(0)
  joinedAt DateTime @default(now())
  game     Game     @relation(fields: [gameId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}

model Round {
  id         String   @id @default(uuid())
  gameId     String
  songTitle  String
  artist     String
  previewUrl String
  answerTime Int
  createdAt  DateTime @default(now())
  game       Game     @relation(fields: [gameId], references: [id])
}

enum GameVisibility {
  PUBLIC
  PRIVATE
}

enum GameStatus {
  WAITING
  PLAYING
  FINISHED
}
