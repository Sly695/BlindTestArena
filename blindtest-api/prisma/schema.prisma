generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(uuid())
  username    String      @unique
  email       String      @unique
  password    String
  avatarUrl   String?
  isVerified  Boolean     @default(false)
  verifiedAt  DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  gamesHosted Game[]      @relation("UserHostedGames")
  players     Player[]
  ThemeVote   ThemeVote[]
}

model Game {
  id         String         @id @default(uuid())
  code       String         @unique
  hostId     String
  visibility GameVisibility @default(PUBLIC)
  rounds     Int            @default(5)
  status     GameStatus     @default(WAITING)
  maxPlayers Int            @default(2)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  host       User           @relation("UserHostedGames", fields: [hostId], references: [id])
  players    Player[]
  roundsData Round[]
  ThemeVote  ThemeVote[]
}

model Player {
  id       String   @id @default(uuid())
  userId   String
  gameId   String
  score    Int      @default(0)
  joinedAt DateTime @default(now())
  game     Game     @relation(fields: [gameId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}

model Round {
  id         String   @id @default(uuid())
  gameId     String
  game       Game     @relation(fields: [gameId], references: [id])

  roundIndex Int

  songTitle  String
  artist     String
  previewUrl String
  coverUrl   String?
  spotifyUrl String?

  status     RoundStatus @default(WAITING)

  // Date de dÃ©but et fin
  startsAt   DateTime?
  endsAt     DateTime?

  answerTime Int @default(30) // durÃ©e en secondes

  createdAt  DateTime @default(now())

  @@unique([gameId, roundIndex])
}

enum RoundStatus {
  WAITING
  STARTED
  FINISHED
  REVEALED
}

enum GameVisibility {
  PUBLIC
  PRIVATE
}

enum GameStatus {
  WAITING
  PLAYING
  FINISHED
}

model ThemeVote {
  id        String   @id @default(uuid())
  gameId    String
  userId    String
  theme     String
  createdAt DateTime @default(now())

  game Game @relation(fields: [gameId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([gameId, userId]) // ðŸ”’ empÃªche plusieurs votes dâ€™un mÃªme joueur pour une mÃªme partie
}
